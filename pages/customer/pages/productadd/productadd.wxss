
.select_box1{
  z-index:250;
 background: #fff;
 width: 80%;
 margin: 30rpx auto;
 margin-left: 10%;
 position: relative;
}
.select1{
  
 box-sizing: border-box;
 width: 100%;
 height: 70rpx;
 border:1px solid #efefef;
 border-radius: 8rpx;
 display: flex;
 align-items: center;
 padding: 10px 20rpx;
}
.select_text1{
 font-size: 30rpx;
 flex: 1;
}
.select_img1{
  
 width: 40rpx;
 height: 40rpx;
 display: block;
 transition:transform 0.3s;
}
.select_img_rotate1{
 
 transform:rotate(180deg); 
}
.option_box1{
 position: absolute;
 top: 70rpx;
 width: 100%;
 box-sizing: border-box;
 height: 0;
 overflow-y: auto;
 border-top: 0;
 background: #fff;
 transition: height 0.3s;
}
.option1{
 display: block;
 line-height: 40rpx;
 font-size: 30rpx;
 padding: 10rpx;
}

