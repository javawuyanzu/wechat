<wxs src="../../utils/power.wxs" module="util" />
<view class="zmenu" >

<view class="menu" wx:for="{{productList}}" wx:for-item="item" wx:key="{{code}}"bindtap="Click1" data-bean="{{item}}">
<view style=" margin-left: 3%; width: 100%;  margin-top: 3%;">
<view  style="font-size: 15px; padding-left: 2%;">锅炉编号：{{item.boilerNo}}</view>
</view>
<view style=" margin-left: 3%; width: 100%; display: flex; margin-top: 3%; ">
<view style="width: 50%; padding-left: 2%;">锅炉控制器/柜：{{item.controllerNo}}</view>
<view style="width: 50%;">锅炉名称：{{item.boilerName}}</view>
</view>
<view style="margin-left: 3%; width: 100%; display: flex; margin-top: 3%; ">
  <view wx:if="{{item.tonnageNum!=null}}" style="width: 50%;padding-left: 2%;">吨位：{{item.tonnageNum}}</view>
<view wx:if="{{item.tonnageNum==null}}" style="width: 50%;padding-left: 2%;">吨位：</view>
<view style="width: 50%;padding-left: 2%;">是否售出：{{util.isSell(item.isSell)}}</view>
</view>
<view style="margin-left: 3%; width: 100%; display: flex; margin-top: 3%; ">
  <view wx:if="{{item.serviceEndDate!=null}}" style="width: 50%;padding-left: 2%;">维保到期时间：{{item.serviceEndDate}}</view>
<view wx:if="{{item.serviceEndDate==null}}" style="width: 50%;padding-left: 2%;">维保到期时间：</view>

</view>

<view style="margin-left: 3%; width: 100%; display: flex; margin-top: 3%; ">
  <view style="width: 50%;padding-left: 2%;">锅炉型号：{{util.productCategory(item.productCategoryId,productCategoryList)}}</view>

</view>

</view>
</view>

<view class="noData" wx:if="{{productList.length==0}}">
<view>暂无数据</view>
</view>


<view wx:if="{{menuShow}}" class="shade"></view>
<view wx:if="{{menuShow}}" class="bumenu">

  <view class='select_box'>
   <view style="width: 35%; font-size: 35rpx;    background-color: white;  text-align: center;"> 客户：</view>
 <view class='select' catchtap='selectTap'>
  <text class='select_text'>{{selectData[index].name}}</text>
  <image class='select_img {{show&&"select_img_rotate"}}' src='../../images/customer/xia.png'></image>   
 </view>
 <view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
  <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' data-bean="{{item}}" catchtap='optionTap'>{{item.name}}</text>
 </view>
</view>

 <view class='select_box1'>
   <view style="width: 35%; font-size: 35rpx;   background-color: white; padding-top: 10rpx; text-align: center;"> 锅炉型号：</view>
 <view class='select1' catchtap='selectTap1'>
  <text class='select_text1'>{{productType[index1].name}}</text>
  <image class='select_img1 {{show1&&"select_img_rotate1"}}' src='../../images/customer/xia.png'></image>   
 </view>
 <view class='option_box1' style='height:{{show1?(productType.length>5?300:productType.length*60):0}}rpx;'>
  <text class='option1' style='{{index==productType.length-1&&"border:0;"}}' wx:for='{{productType}}' wx:key='this' data-index='{{index}}' data-bean="{{item}}" catchtap='optionTap1'>{{item.name}}</text>
 </view>
</view>

 <view class='select_box2'>
   <view style="width: 35%; font-size: 35rpx;    background-color: white; padding-top: 10rpx; text-align: center;"> 燃料：</view>
 <view class='select2' catchtap='selectTap2'>
  <text class='select_text2'>{{fuelList[index2].label}}</text>
  <image class='select_img2 {{show2&&"select_img_rotate2"}}' src='../../images/customer/xia.png'></image>   
 </view>
 <view class='option_box2' style='height:{{show2?(fuelList.length>5?300:fuelList.length*60):0}}rpx;'>
  <text class='option2' style='{{index==fuelList.length-1&&"border:0;"}}' wx:for='{{fuelList}}' wx:key='this' data-index='{{index}}' data-bean="{{item}}" catchtap='optionTap2'>{{item.label}}</text>
 </view>
</view>

 <view class='select_box3'>
   <view style="width: 35%; font-size: 35rpx;   background-color: white; padding-top: 10rpx; text-align: center;"> 介质：</view>
 <view class='select3' catchtap='selectTap3'>
  <text class='select_text3'>{{mediuList[index3].label}}</text>
  <image class='select_img3 {{show3&&"select_img_rotate3"}}' src='../../images/customer/xia.png'></image>   
 </view>
 <view class='option_box3' style='height:{{show3?(mediuList.length>5?300:mediuList.length*60):0}}rpx;'>
  <text class='option3' style='{{index==mediuList.length-1&&"border:0;"}}' wx:for='{{mediuList}}' wx:key='this' data-index='{{index}}' data-bean="{{item}}" catchtap='optionTap3'>{{item.label}}</text>
 </view>
</view>

 <view style="display: flex;width: 100%;margin-top: 20rpx;">
  <view style="width: 35%;  font-size: 35rpx;   background-color: white; padding-top: 10rpx; text-align: center;"> 锅炉编号：</view>
 <input class="input" style=" background-color: white;border:1px solid #efefef;width: 55%" type="text"  
    bindinput="boilerNoInput"/>
 </view>
 
 <view style="display: flex;width: 100%;margin-top: 20rpx;">
  <view style="width: 35%;  font-size: 35rpx;   background-color: white; padding-top: 10rpx; text-align: center;"> 控制器/柜：</view>
 <input class="input" style=" background-color: white;border:1px solid #efefef;width: 55%" type="text"  
    bindinput="controllerNoInput"/>
 </view>
<view style="display: flex;width=100%;">
  <button class="quenyButton" bindtap='closeButton'>取消</button>
  <button class="quenyButton1" bindtap='quenyButton1'>搜索</button>
  </view>

</view>

<menu class="menulist" bindmenuItemClick="menuItemClick" mainmodel="{{mainmodel}}" menulist ="{{menulist}}" ></menu>