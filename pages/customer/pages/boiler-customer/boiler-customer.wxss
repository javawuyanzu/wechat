.select{
  
 box-sizing: border-box;
 width: 55%;
 height: 70rpx;
 border:1px solid #efefef;
 border-radius: 8rpx;
 display: flex;
 align-items: center;
 padding: 0 20rpx;
 
}
.select_text{
 
 font-size: 30rpx;
 flex: 1;
}
.select_img{
  
 width: 40rpx;
 height: 40rpx;
 display: block;
 transition:transform 0.3s;
}
.select_img_rotate{
 
 transform:rotate(180deg); 
}
.option_box{
   
  margin-left: 45%;
