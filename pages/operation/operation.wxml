        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="section">
                <view class="section__title">{{content.operation_deviceNo}}ï¼š</view>
                <input  name="deviceNo"  value="{{inputValue}}" style='padding:20rpx 30rpx;background-color:#fff;'/>
