<!--index.wxml-->
<view class="page" style='background-color:white;'>
  <view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="section">
        <view class="section__title">设备编号：{{deviceNo}}</view>
        <view class="section__title">所属企业：{{enterpriseName}}</view>
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">
            销售状态：{{array[index]}}
          </view>
        </picker>
      </view>
      <view class="btn-area">
        <view class="button-wrapper">
          <!-- <button type="primary" formType="submit" class="primary">修改</button> -->
        </view>
      </view>
    </form>
  </view>

</view>