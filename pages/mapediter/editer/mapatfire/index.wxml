<view class="page" data-weui-theme="light">
	<view class="weui-form">
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cell weui-cell_active fix">
					<view>火段</view>
					<picker bindchange="bindPickerChange" range="{{types}}">
						<view class="picker">
							<view>{{types[typ]?types[typ]:''}} ></view>
						</view>
					</picker>
				</view>
				<view class="weui-cell weui-cell_active">
					<a class="weui-btn weui-btn_primary" bindtap="add">+</a>
				</view>
			</view>
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view wx:for="{{fire}}" wx:key="*this" class="weui-cell weui-cell_active fix">
						<view class="weui-cell__hd"><label class="weui-label">炉子</label>
						</view>
						<view class="weui-cell__bd">
							<label class="weui-label">{{types[item.typ]}}</label>
						</view>
						<view> <button size="mini" bindtap="sub" data-index="{{index}}">×</button></view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>