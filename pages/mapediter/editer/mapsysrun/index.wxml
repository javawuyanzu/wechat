<view class="page" data-weui-theme="light">
	<view class="weui-form">
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
					<view class="weui-cells weui-cells_checkbox">
						<checkbox-group bindchange="checkboxChange">
							<label class="weui-cell weui-cell_active weui-check__label">
								<view class="weui-cell__hd">
									<checkbox class="weui-check" checked="{{open == 1}}" />
									<i class="weui-icon-checked"></i>
								</view>
								<view class="weui-cell__bd">
									<view>设备支持运行时间统计</view>
								</view>
							</label>
						</checkbox-group>
					</view>
			</view>
      <view wx:if="{{open}}" class="weui-cells weui-cells_form">
				<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">设备数据</label></view>
						<view class="weui-cell__bd">
							<picker bindchange="onTypChange" value="{{tindex}}" range="{{typs}}">
								<view class="picker">
									<view>{{typs[tindex]}}</view>
									<view>></view>
								</view>
							</picker>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">显示名称</label></view>
						<view class="weui-cell__bd">
							<input  type="number" class="weui-input" value="{{sysrun.name}}" placeholder="给个名字吧" placeholder-class="weui-input__placeholder" bindinput="setName" />
						</view>
					</view>
				</view>
		</view>
	</view>
	<view class="page__ft">
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap="save">保存</a>
		</view>
	</view>
</view>