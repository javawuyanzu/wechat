<!--pages/mapediter/editer/mapname/index.wxml-->
<view class="page" data-weui-theme="light">
	<view class="weui-form">
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">表名称</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" value="{{name}}" placeholder="给点位表个名字" placeholder-class="weui-input__placeholder" bindinput="setTitle" />
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="page__ft">
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap="save">保存</a>
		</view>
	</view>
</view>