<!--pages/mapediter/editer/mapname/index.wxml-->
<view class="page" data-weui-theme="light">
	<view class="weui-form">
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells weui-cells_checkbox">
				<checkbox-group bindchange="checkboxChange">
					<label class="weui-cell weui-cell_active weui-check__label">
						<view class="weui-cell__hd">
							<checkbox class="weui-check" checked="{{open == 1}}" />
							<i class="weui-icon-checked"></i>
						</view>
						<view class="weui-cell__bd">
							<view>设备需要远程控制</view>
						</view>
					</label>
				</checkbox-group>
			</view>
		</view>
		<view wx:if="{{open}}" class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">站号</label></view>
						<view class="weui-cell__bd">
							<input type="number" class="weui-input" value="{{no}}" placeholder="控制必填，1-255" placeholder-class="weui-input__placeholder" bindinput="setNo" />
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="page__ft">
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap="save">保存</a>
		</view>
	</view>
</view>