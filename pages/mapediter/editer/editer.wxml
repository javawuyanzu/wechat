<!--pages/mapediter/editer/editer.wxml-->
<view class="page" data-weui-theme="light">
	<view class="page__bd page__bd_spacing">
		<view class="kind-list">
			<block wx:for="{{list}}" wx:key="id">
				<view class="kind-list__item">
					<view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
						<view class="weui-flex__item">{{item.name}}</view>
					</view>
					<view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
						<view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
							<block wx:for="{{item.pages}}" wx:for-item="page" wx:key="*this">
								<navigator url="{{page}}/index" class="weui-cell weui-cell_access">
									<view class="weui-cell__bd">{{item.titles[index]}}</view>
									<view class="weui-cell__ft weui-cell__ft_in-access"></view>
								</navigator>
							</block>
						</view>
					</view>
				</view>
			</block>
			<block>
				<view class="kind-list__item">
					<view class="weui-flex kind-list__item-hd">
						<view class="weui-flex__item" wx:if="{{datamapId==null}}">
							<a class="weui-btn weui-btn_primary" bindtap="savePoint">保存点位表</a>
						</view>
						<view class="weui-flex__item" wx:else>
							<a class="weui-btn weui-btn_primary" bindtap="editPoint">修改点位表</a>
						</view>
					</view>
				</view>
			</block>
		</view>
	</view>
	<view class="page__ft" bindtap="changeTheme">

	</view>
</view>