<view class="page" data-weui-theme="light">
	<view class="page_bd">
		<view class="weui-form">
			<view class="weui-form__control-area">
				<view class="weui-cells__group weui-cells__group_form">
					<view class="weui-cell weui-cell_active">
						<a class="weui-btn weui-btn_primary" bindtap="goadd">+</a>
					</view>
					<view wx:for="{{points}}"   wx:for-index="key" wx:key="*this" class="weui-cell weui-cell_active fix">
						<view class="weui-cell__hd" bindlongtap="gomodify" bindtap="gofieldlist" data-index="{{key}}"><label class="weui-label">{{key}}</label>
						</view>
						<view> <button size="mini" bindtap="sub" data-index="{{key}}">×</button></view>
					</view>
				</view>
			</view>
		</view>
	</view>
