<view class="weui-form">
	<view class="weui-form__control-area">
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cell weui-cell_active">
				<view class="weui-cell__hd">
					{{title}}
				</view>
				<view class="weui-cell__bd">
					<picker bindchange="bindPickerChange" value="{{index}}" range="{{options}}">
						<view class="picker">
							<view>{{options[index]}}</view>
							<view>></view>
						</view>
					</picker>
				</view>
			</view>
		</view>
		<view wx:if="{{index>=0}}" class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells weui-cells_form">
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd"><label class="weui-label">显示名称</label></view>
					<view class="weui-cell__bd">
						<input class="weui-input" value="{{options[index]}}" placeholder="显示名称" placeholder-class="weui-input__placeholder" bindinput="setVstr" />
					</view>
				</view>
			</view>
		</view>
	</view>
</view>