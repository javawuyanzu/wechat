/**scan.wxss**/
.scan-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #EEE;
  position: fixed;
  align-items: center;
  justify-content: space-around;
}

.scan-border {
  width: 100%;
  height: 100%;
  /* border: 6rpx solid #1AAD19; */
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scan-camera {
  width: 100%;
height: 100%;
border-radius: 6rpx;

  /* margin: 30rpx; */
}

.cover-corner {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
}

.cover-left-top {
  left: 0;
  top: 0;
}

.cover-right-top {
  right: 0;
  top: 0;
}

.cover-left-bottom {
  left: 0;
  bottom: 0;
}

.cover-right-bottom {
  right: 0;
  bottom: 0;
}

.scan-animation {
position: absolute;
top: 150rpx;
left: 110rpx;
width: 515rpx;
height: 9rpx;
background-color: #1AAD19;
border-radius: 90%;
}
