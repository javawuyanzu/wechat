/**index.wxss**/
.container{
  position:absolute;
  width:100%;
  height:100%;
  background: white;
}
.item-content{
  float:left;
  width:calc(100% - 10px);
  height:100%;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 75px 10px;
  overflow: scroll;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  background:#fff;
}
.item-order{
    border-bottom: 2px solid #ddd;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  /* font-weight:bolder; */
}
.price{
 margin-left: 250rpx;
  color:red;
  font-size:18px;
}

.item-content .box .item .opera{
  margin-top:-15px;
  padding-right:10px;
  text-align:right;
}
.item-content .box .item .opera text{
  display:inline-block;
  font-size:18px;
}
.item-content .box .opera .btn{
  display:inline-block;
  height:30px;
  width:30px;
  line-height:30px;
  text-align:center;
  color:#fff;
  font-weight:bolder;
  background:orange;
  border-radius:5px;
}
.item-content .box .opera .num{
  padding:2px 15px;
  margin:0 10px;
  border:1px solid #ccc;
}
.bottom-bar{
     display:flex; 
    position: fixed;
    bottom:0;
    width:100%;
     height:120rpx;
    background:#fff;
     border-top: 2px solid #ddd;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
 margin-top: 20rpx;
 width: 520rpx;

}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    color:red;
}
.bottom-bar .btn{
    height: 120rpx;
width: 100rpx;
color: #fff;
line-height: 120rpx;
text-align: center;
font-size: 16px;
 background-color: rgba(27, 155, 33, 0.767);
}