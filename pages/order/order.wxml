<!--index.wxml-->
<view class="container">
  <view class="item-content">
    <view class="box">
      <view class="item" wx:for="{{items}}" wx:key="{{item.id}}">
        <!-- <image src="image/item-m.jpg"></image> -->
        <view class="item-order">
        <view wx:if="{{item.rangeType == 1 }}">
          <text class="title" ><text style=" font-size:25px;">{{item.resourceName}}</text> {{item.price}}元 {{item.range}}天   数量：{{item.amount}}</text>
        </view>  
        <view wx:if="{{item.rangeType == 2 }}">
          <text class="title" ><text style=" font-size:25px;">{{item.resourceName}}</text> {{item.price}}元 {{item.range}}个月   数量：{{item.amount}}</text>
        </view>  
        <view class="item-price">
        <text>{{item.deviceNo}}</text>
        <text class="price">￥{{item.price*item.amount}}元</text>
        </view>
        </view>
        <!-- <view class="opera">
          <text class="btn" bindtap="add" data-id="{{item.id}}" data-index="{{index}}">+</text>
          <text class="num">{{item.count}}</text>
          <text class="btn" bindtap="del" data-id="{{item.id}}" data-index="{{index}}">-</text>
        </view> -->
      </view>
    </view>
  </view>
  <view class="bottom-bar">
    <view class="count" style="height: 40px;line-height: 40px;">
        共<text class="num">￥{{discount.total}}元</text>     
        实付 <text class="num">￥{{discount.paymentAmount}}元</text> 
    </view>
    <view  class="btn">
        <text bindtap='pay'>结账</text>
    </view>
  </view>
</view>
