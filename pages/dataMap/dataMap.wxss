/**index.wxss**/
page {
  height: 100%;
}
.plate{
  height:240rpx;
  background: #fff;
}
.plate-item{
  display: flex;
  float:left;
  position: relative;
  width: 140rpx;
  height:180rpx;
  margin-top:38rpx; 
  margin-left:42rpx;
}
.plate-img image{
  width: 100rpx;
  height: 100rpx;
}
.plate-info{
  position: absolute;
  height:40rpx;
  font-size: 30rpx;
  font-family: '微软雅黑';
  bottom: 60rpx;
  left:-10rpx;
}
.image{
  width: 75rpx;
  height: 70rpx;
  margin-left: 70rpx;
}
.littleimage{
  width: 55rpx;
  height: 50rpx;
}
.title{
  font-size: 22px;
  display: flex;
  line-height: 70rpx;
  height: 70rpx;
}
.help {
  width: 100%;
  margin: 0 auto;
}
.help .help_item {
  margin: 10rpx auto;
}
.help .help_item .title {
font-size: 40rpx;
height: 80rpx;
line-height: 60rpx;
display: flex;
border: 1px solid #eee;
align-items: center;

}
.help .help_item .title .title_1 {
  width: 630rpx;
  height: 60rpx;
  padding-left: 20rpx;
}
.help .help_item .title .title_2 {
  width: 50rpx;
  height: 60rpx;
  text-align: center;
}
.help .help_item .title .title_2 image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx auto;
}
.box{
  height: 100%;
 }
 .item{
  position:relative;
  top: 0;
  width: 100%;
  height: 150rpx;
  border-bottom: #d9d9d9 solid 1rpx;
  padding: 0;
 }
 .item .content{
  background-color: #ffffff;
  height: 100%;
  position: relative;
  left: 0;
  width: 100%;
  transition: all 0.3s;
 }
 .item .del-button {
  position: absolute;
  right: -140rpx;
  width: 140rpx;
  height: 100%;
  background-color: #df3448;
  color: #fff;
  top: 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
  font-size: 24rpx;
 }
 
 
